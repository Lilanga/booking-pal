{
  "name": "booking-pal",
  "version": "0.1.3",
  "description": "Meeting room display for BookingPal",
  "main": "main.js",
  "sideEffects": [
    "*.scss",
    "*.css",
    "./src/entry.js"
  ],
  "scripts": {
    "lint": "npx @biomejs/biome lint .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clear-config": "node scripts/clear-config.js",
    "start": "cross-env NODE_ENV=development npx electron .",
    "start-prod": "cross-env NODE_ENV=production npx electron .",
    "build-dev": "cross-env NODE_ENV=development npx webpack --mode development",
    "build": "cross-env NODE_ENV=production npx webpack --mode production --config webpack.prod.config.js",
    "test-prod": "npm run build && cross-env NODE_ENV=production npx electron .",
    "watch": "cross-env NODE_ENV=development npx webpack-dev-server --config webpack.dev-server.config.js --hot",
    "dist": "npm run build && npx electron-builder",
    "dist:win": "npm run build && npx electron-builder --win",
    "dist:mac": "npm run build && npx electron-builder --mac",
    "dist:linux": "npm run build && npx electron-builder --linux",
    "dist:pi": "npm run build && npx electron-builder --linux --arm64",
    "dist:portable": "npm run build && npx electron-builder --win portable",
    "dist:appimage": "npm run build && npx electron-builder --linux AppImage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lilanga/booking-pal"
  },
  "author": "bitchefs <lilanga@live.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lilanga/booking-pal/issues"
  },
  "homepage": "https://github.com/Lilanga/booking-pal#readme",
  "build": {
    "appId": "com.bitchefs.booking-pal",
    "productName": "BookingPal",
    "copyright": "Copyright Â© 2024 BitChefs",
    "publish": null,
    "directories": {
      "output": "dist/electron-builder",
      "buildResources": "static"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "dist/main.*.js",
      "dist/vendors.*.js",
      "dist/fonts/**/*",
      "dist/icons/**/*",
      "src/templates/**/*",
      "src/**/*",
      "src/config-server.js",
      "src/config-store.js",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "static/icons/app-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "static/icons/app-icon.png",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "static/icons/app-icon.png",
      "category": "Office"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "deb": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "rpm": {
      "artifactName": "${productName}-${version}.${ext}"
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-object-rest-spread": "^7.26.10",
    "@babel/preset-env": "^7.26.10",
    "@babel/preset-react": "^7.26.10",
    "@biomejs/biome": "^1.9.4",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "^3.45.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-icon-maker": "^0.0.5",
    "html-webpack-plugin": "^5.6.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "cors": "^2.8.5",
    "electron-store": "^10.1.0",
    "express": "^5.1.0",
    "google-auth-library": "^9.15.0",
    "googleapis": "^148.0.0",
    "humanize-duration": "^3.32.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-qr-code": "^2.0.15",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.28.0",
    "react-transition-group": "^4.4.5",
    "redux": "^5.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^3.1.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0"
  }
}